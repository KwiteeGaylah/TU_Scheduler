{
  "name": "tu-scheduler",
  "version": "1.0.0",
  "description": "Open Source Academic Scheduling & Timetable Management System",
  "author": "Kwitee D. Gaylah",
  "license": "MIT",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "tsc -p tsconfig.main.json && electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "package": "npm run build && npx electron-packager . \"TU Scheduler\" --platform=win32 --arch=x64 --out=release --overwrite --icon=build/icon.ico --no-asar",
    "package:dir": "npm run build && npx electron-packager . \"TU Scheduler\" --platform=win32 --arch=x64 --out=release --overwrite --icon=build/icon.ico --no-asar",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext ts,tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "exceljs": "^4.4.0",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "sql.js": "^1.10.3",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.6",
    "@types/papaparse": "^5.5.0",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^4.0.13",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^27.2.0",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "puppeteer": "^21.9.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.1",
    "vitest": "^4.0.13"
  }
}
